

<form
  action="./api/products"
  method="POST"
  id="idForm"
  
>
  <h2 class="subtitle">Registro de productos</h2>
  <label class="label" for="title">Nombre</label>
  <input
   
    type="text"
    name="title"
    id="title"
    placeholder="Nombre"
    required
  />
  <label  for="description">Descripción</label>
  <input
    
    type="text"
    name="description"
    id="description"
    placeholder="Descripción"
    required
  />
  <label for="category">Categoría</label>
  <input
    
    type="text"
    name="category"
    id="category"
    placeholder="Categoría"
    required
  />
  <label  for="code">Código</label>
  <input
   
    type="text"
    name="code"
    id="code"
    placeholder="Código"
    required
  />
  <label for="stock">Stock</label>
  <input
    
    type="number "
    name="stock"
    id="stock"
    placeholder="0"
    required
  />
  <label for="price">Precio $</label>
  <input
   
    type="float"
    name="price"
    id="price"
    placeholder="00.00"
    required
  />
  <label for="thumbnail">Imagen: url</label>
  <input
    
    type="text"
    name="thumbnail"
    id="thumbnail"
    placeholder="https://imagen.jpg"
  />
  <button class="btn btn-add" id="add-btn" type="submit">Registrar</button>
  <h2>Eliminar producto</h2>
  
  

  <input  type="number"  id="pid"   placeholder="ID del Producto" />
  <button id="buttonSubmitDelete" type="submit">Eliminar</button>
</form>

<div id="container"></div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="./js/realTimeProducts.js"></script>